{
  "permissions": {
    "allow": [
      "WebFetch(domain:claude.ai)",
      "WebFetch(domain:github.com)",
      "Bash(git ls-tree:*)",
      "Bash(grep:*)",
      "Bash(cargo check:*)",
      "Bash(npm run check:*)",
      "Bash(ls:*)",
      "Bash(curl:*)",
      "Bash(cargo build:*)",
      "Bash(wc:*)",
      "Bash(docker build:*)",
      "Bash(find:*)",
      "Bash(cargo test:*)",
      "Bash(./target/debug/bonscompte-admin:*)"
    ],
    "deny": [
      "Read(*.csv)",
      "Read(*.log)",
      "Read(*.pyc)",
      "Read(backend/.env)",
      "Read(backend/target/)",
      "Read(scripts/.env)",
      "Read(service-account-key.json)",
      "Read(.github/)",
      "Read(.idea/)",
      "Read(.next/)",
      "Read(.serverless)",
      "Read(.terraform.lock.hcl)",
      "Read(.terraform/)",
      "Read(.vscode/)",
      "Read(__pycache__/)",
      "Read(build/)",
      "Read(data/)",
      "Read(backend/data/)",
      "Read(dist/)",
      "Read(frontend/dist/)",
      "Read(node_modules/)",
      "Read(frontend/node_modules/)",
      "Read(frontend/.svelte-kit/)",
      "Read(venv/)",
      "Read(yarn.lock)",
      "Read(backend/Cargo.lock)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ]
  }
}
